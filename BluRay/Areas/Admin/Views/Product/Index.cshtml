@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class="bg-secondary bg-black ml-o py-3">
        <div class="row">
            <div class="col-12 text-center pt-2">
                <h2 class="text-light py-2">Movies</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary border-2">
                    <i class="bi bi-plus-circle"></i> Create New Movie
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Director</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>         
        </table>
        </div>
        </div>

@section Scripts {
    <script src="~/js/product.js"></script>
}

