@model List<Product>

<div class="card shadow border-0 mt-4">
    <div class=" bg-secondary bg-gradient ml-o py-3">
        <div class="row">
            <div class="col-12 text-center pt-4">
                <h2 class="text-dark py-2">Movies</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary border-2">
                    <i class="bi bi-plus-circle"></i> Create New Movie
                </a>
            </div>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Director</th>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>
                            @obj.ISBN
                        </td>
                        <td>
                            @obj.ListPrice
                        </td>
                        <td>
                            @obj.Director
                        </td>
                        <td>
                            
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-outline-primary border-2 form-control mx-2">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger border-1 form-control mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>


                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        </div>
        </div>

   
