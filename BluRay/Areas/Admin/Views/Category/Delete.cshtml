@model Category

<div class="card shadow border-0 mt-4">
    <div class=" bg-secondary bg-gradient ml-o py-3">
        <div class="row">
            <div class="col-12 text-center pt-4">
                <h2 class="text-dark py-2">Delete Category</h2>

            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-0">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2">Category Name</label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2">Display Order</label>
                </div>

                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-danger border-1 form-control">Delete</button>

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border-2 form-control">
                            Return to Categories
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


